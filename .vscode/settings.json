{
  "files.exclude": {
    "backend\\node_modules": true
  },
  "better-comments.tags": [
    // MAIN HEADER - YELLOW BOLD = //T
    // COMPONENT FUNCTION- GREEN BRIGHT = //B
    // SEMI COMPONENT FUNCTION - GREEN LOW
    // SPECIFIC LINE - BROWN LIGHT
    // PERSONAL MESSAGE - GREY
    // WARNING - RED - //!
    // COMMENT - //.//

    // FF0 - yellow
    {
      // MAIN HEADER
      "tag": "T/",
      "color": "#ebc033",
      "strikethrough": false,
      "underline": false,
      "backgroundColor": "transparent",
      "bold": false,
      "italic": false
    },
    {
      //COMPONENT FUNCTION
      "tag": "M/",
      "color": "#884EA0",
      "strikethrough": false,
      "underline": false,
      "backgroundColor": "transparent",
      "bold": true,
      "italic": false
    },
    {
      //M SEMI COMPONENT
      "tag": "S/",
      "color": "#2874A6",
      "strikethrough": false,
      "underline": false,
      "backgroundColor": "transparent",
      "bold": false,
      "italic": false
    },
    {
      // PERSONAL MESSAGE
      "tag": "P/",
      "color": "#AF601A ",
      // "color": "#884EA0 ",
      "strikethrough": false,
      "underline": false,
      "backgroundColor": "transparent",
      "bold": false,
      "italic": false
    },
    {
      // COMMENT
      "tag": "//",
      "color": "#474747",
      "strikethrough": true,
      "underline": false,
      "backgroundColor": "transparent",
      "bold": false,
      "italic": false
    }
  ]
}
